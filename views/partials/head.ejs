<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="<%= page.css  %> " />
  <script src="<%= page.js %> "></script>
  <title>Title | <%= page.title %></title>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins&display=swap");

    :root {
      --flow: linear-gradient(
        45deg,
        #c5c6c7,
        #1f2833,
        #45a29e,
        #757985,
        #66fcf1,
        #0b0c10
      );

      --antiflow: linear-gradient(
        #0b0c10,
        #66fcf1,
        #757985,
        #45a29e,
        #1f2833,
        #c5c6c7
      );
    }

    * {
      margin: 0;
      padding: 0;
      font-family: "Poppins", sans-serif;
    }

    body {
      background-color: #1f2833;
    }

    ::-webkit-scrollbar {
      width: 0.75em;
    }

    ::-webkit-scrollbar-track {
      border-radius: 100vw;
      background: #1f2833;
    }

    ::-webkit-scrollbar-thumb {
      background: rgba(128, 128, 128, 0.753);
      border-radius: 100vw;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #c5c6c7c4;
    }

    @media(max-width: 1024px) {
      * {
        font-size: 85%;
      }
      .nav-logo {
        position: relative;
        transform: translateX(2vh) translateY(0);
        font-weight: bold;
        max-width: 98vw;
      }

      .nav-logo p {
        font-size: 1.6rem;
      }

      .menu a {
        display: block;
      }

      .nav-bar ul {
        display: block;
        list-style: none;
        text-decoration: none;
      }

      nav ul li {
        display: block;
        line-height: 4vh;
        transform: translateY(0);
        text-align: right;
      }

      nav ul li a {
        font-size: 1.2rem;
      }
    }

    @media (max-width: 786px) {
      * {
        font-size: 70%;
      }

      .nav-logo {
        transform: translateX(3vh) translateY(11vh);
        font-weight: bold;
        max-width: 90vw;
      }

      .nav-logo p {
        font-size: 3rem;
      }

      .nav-bar {
        height: 30vh;
      }

      .nav-bar ul {
        display: flex;
        flex-direction: column;
        list-style: none;
        text-decoration: none;
      }

      nav ul li {
        display: block;
        line-height: 4vh;
        text-align: right;
      }

      nav ul li a {
        font-size: 1rem;
      }

      .menu a {
        display: inline-block;
      }

    }

    @media (max-width: 320px) {
      * {
        font-size: 60%;
      }

      .nav-logo {
        display: inline-block;
        transform: translateX(3vh) translateY(11vh);
        font-weight: bold;
        max-width: 90vw;
      }

      .nav-logo p {
        font-size: 3rem;
      }

      .nav-bar {
        display: block;
        height: 27.5vh;
      }

      .nav-bar ul {
        display: flex;
        flex-direction: column;
        list-style: none;
        text-decoration: none;
      }

      nav ul li {
        display: block;
        line-height: 4vh;
        transform: translateY(-3.5vh);
        text-align: right;
      }

      nav ul li a {
        font-size: 1rem;
      }

      .menu a {
        display: inline-block;
      }
    }
  </style>
</head>
